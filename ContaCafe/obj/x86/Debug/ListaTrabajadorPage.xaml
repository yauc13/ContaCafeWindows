<Page x:ConnectionId='1'
    x:Class="ContaCafe.ListaTrabajadorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ContaCafe"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:mod="using:ContaCafe.Models"
    xmlns:par="using:ContaCafe.Parse"
    >

    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
              
                <AppBarSeparator />
                <AppBarButton x:ConnectionId='2' Icon="Add" Label="AddTrabajador"                       />
                <AppBarButton x:ConnectionId='3' Icon="Edit" Label="EdtTrabajador"                        />
            </CommandBar.PrimaryCommands>
            <CommandBar.SecondaryCommands>

            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="Black">
        <StackPanel Orientation="Vertical" Padding="10">
        <TextBlock Text="Trabajadores" Style="{StaticResource HeaderTextBlockStyle}" Foreground="White"/>
        <ListBox x:ConnectionId='4'
            x:Name="listaTrabajador"
            Grid.Row="0"
                                                 
            Background="#2b2b2b"                                    
            >
            <ListBox.ItemTemplate>
                <DataTemplate                            >
                    <Grid x:ConnectionId='5'>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                       
                            <TextBlock x:ConnectionId='6' 
                                Grid.Column="0"
                                Grid.Row="0"
                                Grid.ColumnSpan="3"
                                Style="{StaticResource TitleTextBlockStyle}"
                                       Foreground="White"
                                                                       />
                               
                                    <TextBlock 
                                         Grid.Column="0"
                                         Grid.Row="1"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="White"
                                               Margin="0,0,5,0"
                                       Text="Lu"/>
                                    <TextBlock 
                                         Grid.Column="1"
                                         Grid.Row="1"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="White"
                                                Margin="0,0,5,0"
                                       Text="Ma"/>
                                    <TextBlock 
                                         Grid.Column="2"
                                         Grid.Row="1"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="White"
                                                Margin="0,0,5,0"
                                       Text="Mi"/>
                                    <TextBlock 
                                         Grid.Column="3"
                                         Grid.Row="1"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="White"
                                                Margin="0,0,5,0"
                                       Text="Ju"/>
                                    <TextBlock 
                                         Grid.Column="4"
                                         Grid.Row="1"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="White"
                                                Margin="0,0,5,0"
                                       Text="Vi"/>
                                    <TextBlock 
                                         Grid.Column="5"
                                         Grid.Row="1"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="White"
                                                Margin="0,0,5,0"
                                       Text="Sa"/>
                                    <TextBlock 
                                         Grid.Column="6"
                                         Grid.Row="1"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="White"
                                                Margin="0,0,5,0"
                                       Text="Do"/>
                         
                                    <TextBlock x:ConnectionId='7'
                                         Grid.Column="0"
                                         Grid.Row="2"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="White"
                                               Margin="0,0,5,0"
                                                          />
                                    <TextBlock x:ConnectionId='8'
                                        Grid.Column="1"
                                         Grid.Row="2"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="White"
                                                Margin="0,0,5,0"
                                                          />
                                    <TextBlock x:ConnectionId='9' 
                                        Grid.Column="2"
                                         Grid.Row="2"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="White"
                                                Margin="0,0,5,0"
                                                          />
                                    <TextBlock x:ConnectionId='10' 
                                        Grid.Column="3"
                                         Grid.Row="2"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="White"
                                                Margin="0,0,5,0"
                                                          />
                                    <TextBlock x:ConnectionId='11' 
                                        Grid.Column="4"
                                         Grid.Row="2"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="White"
                                                Margin="0,0,5,0"
                                                          />
                                    <TextBlock x:ConnectionId='12' 
                                        Grid.Column="5"
                                         Grid.Row="2"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="White"
                                                Margin="0,0,5,0"
                                                          />
                                    <TextBlock x:ConnectionId='13' 
                                        Grid.Column="6"
                                         Grid.Row="2"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="White"
                                                Margin="0,0,5,0"
                                                          />
                        
                         

                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        </StackPanel>
    </Grid>
</Page>

